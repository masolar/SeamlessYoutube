{
    "manifest_version" : 2,
    "name": "Seamless Youtube",
    "version": "1.0",

    "description": "Lets you scroll on youtube without the video moving off screen.",
    "icons": {
        "48": "frog.jpg"
    },

    "permissions": [
        "activeTab"
    ],
    
    "background": {
        "scripts": ["background.js"]
    },

    "browser_action": {
        "default_icon": "frog.jpg",
        "default_title": "Seamless Youtube"
    }
}